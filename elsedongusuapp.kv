RelativeLayout:
    Image:
        source:"weatherbg.png"
        size_hint:1,1
        allow_stretch:True
    ActionBar:
        size_hint:1,0.1
        pos_hint:{"top":1}
        ActionView:
            use_separator:True
            ActionPrevious:
                title:"ElseDongusu Weather App"
                with_previous:False
                app_icon:"thermometer.png"
            ActionButton:
                text:"P"
                font_name:"mFont"
            ActionButton:
                text:"U"
                font_name:"mFont"
            ActionOverflow:
                ActionButton:
                    text:"E"
                    font_name:"mFont"
                ActionButton:
                    text:"O"
                    font_name:"mFont"
    TabbedPanel:
        canvas:
            Color:
                rgb:0,0,0
            Rectangle:
                pos:self.pos
                size:self.size
        size_hint:1,0.3
        do_default_tab:False
        tab_pos:"top_mid"
        TabbedPanelItem:
            text:"Today"
            GridLayout:
                rows:3
                cols:2
                Label:
                    text:"Day"
                Label:
                    text:"Night"
                Label:
                    text:"13"
                Label:
                    text:"6"
                Image:
                    source:"term_today.png"
                Image:
                    source:"term_today.png"
        TabbedPanelItem:
            text:"4 days"
            GridLayout:
                cols:4
                rows:4
                Label:
                    text:"SAT"
                Label:
                    text:"SUN"
                Label:
                    text:"MON"
                Label:
                    text:"TUE"
                Label:
                    text:"17"
                Label:
                    text:"21"
                Label:
                    text:"26"
                Label:
                    text:"24"
                Image:
                    source:"term.png"
                Image:
                    source:"term.png"
                Image:
                    source:"term.png"
                Image:
                    source:"term.png"
                Label:
                    text:"17"
                Label:
                    text:"21"
                Label:
                    text:"26"
                Label:
                    text:"24"


    BoxLayout:
        orientation:"vertical"
        size_hint:1,None
        height:100
        pos_hint:{"center_x":0.5,"center_y":0.6}
        Label:
            text:"Partly Sunny"
        Label:
            text:"10"
    BoxLayout:
        orientation:"vertical"
        size_hint:1,None
        pos_hint:{"center_x":0.2,"center_y":0.42}
        Label:
            text:"% 45"
        Label:
            text:"NNE 3 m/s"









